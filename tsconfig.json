{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "ES2023"],
    "types": ["svelte"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
  ]
}
